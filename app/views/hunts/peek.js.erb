var clue = 'peek'
if ($("#popup").attr("data-current") != clue) {

	<% xml_doc = load_xml("product", "#{@hunt.product.data_file}.xml") %>
	<% clue_node = xml_doc.xpath("//clues/clue[@number='#{@hunt.current_clue + 1}']") %>

	$('#popup h2').text('Next direction will be')
	$('#popup p').text('<%= clue_node.xpath("output/direction").inner_html %>')
	$('#popup a').text('OK')
	
	$("#popup").attr("data-current", clue)
}

$("#overlay").show()
$("#popup").show()