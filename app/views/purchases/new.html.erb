<% provide :title, 'New purchase' %>

<h1>New purchase</h1>
<div class="row">
	<div class="span6 offset3 well">
		<%= form_for(@purchase, html: { class: "form-horizontal" }) do |f| %>
			<%= render 'fields', f: f %>
			<div class="center">
				<%= f.submit "Create purchase", class: "btn btn-large btn-primary" %>
			</div>
		<% end %>
	</div>
	
</div>
