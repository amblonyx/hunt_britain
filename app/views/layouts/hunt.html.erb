<!DOCTYPE html>
<html>
<head>
  <title>Hunt Britain</title>
  <%= stylesheet_link_tag "hunt", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
	<%= render 'header' %>
	<% flash.each do |key, value| %>
		<%= content_tag(:div, value, class: "alert alert-#{key}") %>
	<% end %>
	<%= yield %>
	<%= render 'footer' %>	
	<%= debug(params) if Rails.env.development? %>		
</body>
</html>
