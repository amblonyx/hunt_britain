<h1>Reset password</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user, url: "reset_password", html: { class:"form-horizontal well form-validate" }) do |f| %>
			<%= render "shared/error_messages", object: @user %>
			<%= render 'shared/flash_messages' %>

			<%= hidden_field_tag "id", @user.id %>
			<%= render 'fields', f: f, show: ["password"] %>
			<div class="control-group">
				<div class="controls">
					<%= f.submit "Reset my password", class: "btn btn-primary" %>
				</div>
			</div>
		<% end %>
	</div>
	
</div>
