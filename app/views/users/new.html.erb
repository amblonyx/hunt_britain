<h1>Register for an account with Hunt Britain</h1>
<div class="row">
	<div class="span6 offset3 well">
		<% if signed_in? %>
			<%= render 'shared/already_signed_in', signin: false, signup: true %>
		<% else %>
			<%= form_for(@user, html: { class: "form-horizontal" }) do |f| %>
				<%= render 'fields', f: f, confirm: "Confirm password" %>
				<input name="honey" class="input_honey"/>
				<div class="control-group">
					<div class="controls">
						<%= f.submit "Create my account", class: "btn btn-primary" %>
						<%= submit_tag "Cancel", class: "btn" %>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
	
</div>
